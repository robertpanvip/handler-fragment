{
    "compilerOptions": {
        "outDir": "../dist",
        "sourceMap": false,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "module": "commonjs",
        "target": "ESNext",
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "moduleResolution": "node",
        "removeComments": true,
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        "lib",
        "dist"
    ]
}
